@model PhotoPavilion.Models.ViewModels.OrderProducts.OrderProductDetailsViewModel

@{ ViewData["Title"] = "Orders Details"; }

<div class="container mt-3 mb-3">
    <h2>Order Details</h2>
    <h4>Order #@Model.Id</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.UserFullName)</dt>
        <dd>@Html.DisplayFor(model => model.UserFullName)</dd>
        <dt>@Html.DisplayNameFor(model => model.ProductName)</dt>
        <dd>@Html.DisplayFor(model => model.ProductName)</dd>
        <dt>@Html.DisplayNameFor(model => model.Quantity)</dt>
        <dd>@Html.DisplayFor(model => model.Quantity)</dd>
        <dt>@Html.DisplayNameFor(model => model.Status)</dt>
        <dd>@Html.DisplayFor(model => model.Status)</dd>
        <dt>@Html.DisplayNameFor(model => model.Date)</dt>
        <dd><time datetime="@Model.Date.ToString("O")"></time></dd>
    </dl>
    <div>
        <a class="btn btn-primary" asp-controller="OrderProducts" asp-action="Index">Back to All</a>
    </div>
</div>
