@using PhotoPavilion.Models.ViewModels.Brands
@model IEnumerable<BrandDetailsViewModel>
@{
    this.ViewData["Title"] = "Brands";
}

<div class="text-center">
    <h1 class="display-4" style="padding-top: 1vw;">A list with our brands</h1>
</div>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        @{
            for (int i = 1; i <= Model.Count(); i++)
            {
                if (i == 1)
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="active"></li>
                }

                <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
            }
        }
    </ol>
    <div class="carousel-inner">
        @{
            for (int i = 1; i <= Model.Count(); i++)
            {
                <div class="carousel-@(i == 1 ? "item active" : "item")">
                    <img class="d-block w-100" src="~/images/@(i.ToString()).jpg" alt="Brand image_@i.ToString()">
                </div>
            }
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>