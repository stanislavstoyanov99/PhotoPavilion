@using PhotoPavilion.Common
@using PhotoPavilion.Models.ViewModels.Products
@model ProductsHomePageListingViewModel
@{
    this.ViewData["Title"] = "Home Page";
}

<link href="~/css/carousel.css" rel="stylesheet" asp-append-version="true" />

<div class="text-center">
    <h1 class="display-4" style="padding-top: 1vw;">Welcome to @GlobalConstants.SystemName!</h1>
    <p>Take a deep breath and find the best photography products</p>
</div>

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="bd-placeholder-img" src="~/images/home/nikon.jpg" />
            <div class="container">
                <div class="carousel-caption text-right">
                    <p>
                        <a class="btn btn-lg btn-primary" asp-area="Identity" asp-page="/Account/Register" role="button">
                            Sign up today
                        </a>
                    </p>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img class="bd-placeholder-img" src="~/images/home/canon.jpg" />
        </div>
        <div class="carousel-item">
            <img class="bd-placeholder-img" src="~/images/home/sony.jpg" />
            <div class="container">
                <div class="carousel-caption text-right">
                    <p>
                        <a class="btn btn-lg btn-primary" asp-controller="Products" asp-action="Index" role="button">
                            Browse our products
                        </a>
                    </p>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img class="bd-placeholder-img" src="~/images/home/discount.jpg" />
        </div>
    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="container marketing">
    <div class="row">
        @foreach (var product in Model.TopProducts)
        {
            <div class="col-lg-4">
                <svg class="bd-placeholder-img rounded-circle" width="140" height="140">
                    <title>@product.Name</title>
                    <clipPath id="circleView">
                        <rect width="100%" height="100%" />
                    </clipPath>
                    <image width="140" height="140" xlink:href="@product.ImagePath" clip-path="url(#circleView)" />
                </svg>
                <h2>@product.Name</h2>
                <p>@Html.Raw(product.SanitizedShortDescription)</p>
                <p>
                    <a class="btn btn-secondary" asp-area="" asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" role="button">View details &raquo;</a>
                </p>
            </div>
            <hr class="featurette-divider">
        }
    </div>
</div>
