@model PhotoPavilion.Models.ViewModels.Products.ProductDeleteViewModel
@{
    this.ViewData["Title"] = "Delete Product";
    this.ViewData["ActivePage"] = ProductNavPages.Products;
}

<div class="row">
    <div class="col-md-9">
        <form asp-area="Administration" asp-controller="Products" asp-action="Remove" method="post">
            <h4 class="text-danger">Are you sure you want to delete <b>@Model.Name</b> product?</h4>
            <hr />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" disabled="" />
            </div>
            <div class="form-group">
                <label asp-for="Code"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" disabled=""></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagePath"></label>
                <div class="form-group">
                    <img class="img-fluid img-thumbnail" src="@Model.ImagePath" alt="Image" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Category.Name"></label>
                <input asp-for="Category.Name" class="form-control" disabled="" />
            </div>
            <div class="form-group">
                <label asp-for="Brand.Name"></label>
                <input asp-for="Brand.Name" class="form-control" disabled="" />
            </div>
            <button type="submit" class="btn btn-danger">Delete product</button>
            <button asp-area="Administration" asp-controller="Products" asp-action="GetAll" class="btn btn-primary">Back to all products</button>
        </form>
    </div>
</div>